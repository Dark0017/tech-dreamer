extends ../layout.pug

block content
    .container.top
        .row
            div.col-lg-6.col-md-offset-3
                if (success.length > 0)
                    .alert.alert-success.alert-dismissible
                      a.close(href='#' data-dismiss='alert' aria-label='close') &times;
                      strong Success!
                      |  #{success}

                h1 Create new product
                form(method='post' enctype='multipart/form-data')
                    div.form-group
                        label(for="name") Name:
                        input.form-control(type='text' name='name')

                    div.form-group
                        label(for="price") Price:
                        input.form-control(type='text' name='price')
                    div.form-group
                        label(for="image") Image:
                        input.form-control(name='productImage' type='file')
                    button.btn.btn-success(type='submit') Submit
