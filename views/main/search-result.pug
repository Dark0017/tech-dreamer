extends ../layout.pug

block content
    if (data.length === 0)
        h3 Seach not found
    else
        h3 Results for #{query}
        .container
            .row.top
                - for (var i = 0; i < length; i++)
                    .col-md-4.holder
                        - var part = id[i]
                        - var url = '/product/' + part
                        a(href=url)
                            .thumbnail
                                img(src=image[i])
                                .caption
                                h3=name[i]
                                p &#8377; #{price[i]}
