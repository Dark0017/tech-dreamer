extends ../layout.pug

block content
    .container.top
        .row
            div.col-lg-6.col-md-offset-3
                if (message.length > 0)
                    .alert.alert-success.alert-dismissible
                      a.close(href='#' data-dismiss='alert' aria-label='close') &times;
                      strong Success!
                      |  #{message}

                h1 Update info
                form(method='post')
                    div.form-group
                        label(for="name") Name:
                        input.form-control(type='text' name='name')

                    div.form-group
                        label(for="address") Address:
                        input.form-control(type='text' name='address')
                    button.btn.btn-success(type='submit') Submit
